# Backend Environment Variables for Production
# Copy this file to .env and fill in the values

# Django Settings
DJANGO_SECRET_KEY=your-super-secret-key-here-change-this-to-something-random
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=your-domain.com,www.your-domain.com,YOUR_EC2_PUBLIC_IP
DJANGO_SETTINGS_MODULE=backend.settings_production

# Database Configuration (PostgreSQL recommended for production)
DATABASE_URL=postgresql://tournament_user:YOUR_STRONG_PASSWORD@localhost:5432/tournament_arena

# Or for SQLite (not recommended for production)
# DATABASE_URL=sqlite:///db.sqlite3

# Redis Configuration (for WebSocket channels)
REDIS_URL=redis://localhost:6379/0

# CORS Settings
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com,http://YOUR_EC2_PUBLIC_IP

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# Email Configuration (Optional - for password reset, notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# AWS S3 Configuration (Optional - for media files)
# USE_S3=True
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Sentry (Optional - for error tracking)
# SENTRY_DSN=your-sentry-dsn-here

# Generate a new secret key with:
# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
